{
    "name": "lobby-frontend",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/lobby/frontend/src",
    "projectType": "application",
    "tags": [
        "scope:lobby",
        "app:lobby-frontend",
        "type:app",
        "environment:production",
        "environment:demo",
        "environment:dev"
    ],
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/lobby/frontend"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "lobby-frontend:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "lobby-frontend:build:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "lobby-frontend:build:production",
                    "hmr": false
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "typecheck": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["tsc -p tsconfig.app.json --noEmit --incremental"],
                "cwd": "{projectRoot}",
                "forwardAllArgs": false
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/lobby/frontend/jest.config.ts"
            }
        },
        "preview": {
            "dependsOn": ["build"],
            "executor": "@nx/vite:preview-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "lobby-frontend:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "lobby-frontend:build:development"
                },
                "production": {
                    "buildTarget": "lobby-frontend:build:production"
                }
            }
        }
    }
}
