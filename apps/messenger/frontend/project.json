{
  "name": "messenger-frontend",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/messenger/frontend/src",
  "projectType": "application",
  "tags": [
    "scope:messenger",
    "app:messenger-frontend",
    "type:app",
    "environment:production",
    "environment:demo",
    "environment:dev"
  ],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/messenger/frontend"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "messenger-frontend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "messenger-frontend:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "messenger-frontend:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p tsconfig.app.json --noEmit --incremental"],
        "cwd": "{projectRoot}",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/messenger/frontend/jest.config.ts"
      }
    },
    "preview": {
      "dependsOn": ["build"],
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "messenger-frontend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "messenger-frontend:build:development"
        },
        "production": {
          "buildTarget": "messenger-frontend:build:production"
        }
      }
    }
  }
}
