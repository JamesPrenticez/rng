{
  "name": "dice-magic-backend",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dice-magic/backend/src",
  "projectType": "application",
  "tags": [
    "scope:dice-magic",
    "app:dice-magic-backend",
    "type:app",
    "environment:production",
    "environment:demo",
    "environment:dev"
  ],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/dice-magic/backend",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/dice-magic/backend/src/main.ts",
        "tsConfig": "apps/dice-magic/backend/tsconfig.app.json",
        "assets": [
          "apps/dice-magic/backend/src/assets",
          {
            "input": "apps/dice-magic/backend/src/public",
            "glob": "**/*",
            "output": "public"
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "dice-magic-backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "dice-magic-backend:build:development"
        },
        "production": {
          "buildTarget": "dice-magic-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p tsconfig.app.json --noEmit --incremental"],
        "cwd": "{projectRoot}",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/dice-magic/backend/jest.config.ts"
      }
    }
  }
}
