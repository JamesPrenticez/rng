{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node10",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@shared/assets/styles": ["libs/shared/assets/styles"],
      "@shared/events": ["libs/shared/events/src/index.ts"],
      "@shared/layouts": ["libs/shared/ui/layouts/src/index.ts"],
      "@shared/models": ["libs/shared/models/src/index.ts"],
      "@shared/websocket": ["libs/shared/websocket/src/index.ts"],
      "@shared/stores": ["libs/shared/ui/stores/src/index.ts"],
      "@shared/contexts": ["libs/shared/ui/contexts/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
