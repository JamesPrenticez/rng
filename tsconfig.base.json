      "@dice-magic/stores": ["libs/dice-magic/ui/stores/src/index.ts"],
      "@dice-magic/ui": ["libs/dice-magic/ui/src/index.ts"],
      "@dice-magic/utils": ["libs/dice-magic/utils/src/index.ts"],
      "@jump-quest/hooks": ["libs/jump-quest/ui/hooks/src/index.ts"],
      "@jump-quest/models": ["libs/jump-quest/models/src/index.ts"],
      "@jump-quest/stores": ["libs/jump-quest/ui/stores/src/index.ts"],
      "@shared/assets/audio/*": ["libs/shared/assets/audio/*"],
      "@shared/assets/fonts/*": ["libs/shared/assets/fonts/*"],
      "@shared/assets/icons/*": ["libs/shared/assets/icons/*"],
      "@shared/assets/images/*": ["libs/shared/assets/images/*"],
      "@shared/assets/styles/*": ["libs/shared/assets/styles/*"],
      "@shared/components": ["libs/shared/ui/components/src/index.ts"],
