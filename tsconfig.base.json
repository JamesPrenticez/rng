      "@shared/demo-casino": ["libs/shared/ui/demo-casino/src/index.ts"],
      "@shared/events": ["libs/shared/events/src/index.ts"],
      "@shared/hooks": ["libs/shared/ui/hooks/src/index.ts"],
      "@shared/layouts": ["libs/shared/ui/layouts/src/index.ts"],
      "@shared/models": ["libs/shared/models/src/index.ts"],
      "@shared/state-machine": ["libs/shared/state-machine/src/index.ts"],
      "@shared/stores": ["libs/shared/ui/stores/src/index.ts"],
      "@shared/theme": ["libs/shared/ui/theme/src/index.ts"],
      "@shared/ui/theme": ["libs/shared/ui/theme/src/index.ts"],
      "@shared/utils": ["libs/shared/utils/src/index.ts"],
      "@shared/websocket": ["libs/shared/websocket/src/index.ts"],
      "@jump-quest/core": ["libs/jump-quest/game/core/src/index.ts"],
      "@jump-quest/entities": ["libs/jump-quest/game/entities/src/index.ts"],
      "@jump-quest/systems": ["libs/jump-quest/game/systems/src/index.ts"]
