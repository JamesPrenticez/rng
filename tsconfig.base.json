{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node10",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@shared/assets/styles": ["libs/shared/assets/styles"],
      "@shared/ui/components": ["libs/shared/ui/components/src/lib/index.ts"],
      "@shared/ui/components/buttons": [
        "libs/shared/ui/components/src/lib/buttons/index.ts"
      ],
      "@shared/ui/components/effects": [
        "libs/shared/ui/components/src/lib/effects/index.ts"
      ],
      "@shared/ui/components/inputs": [
        "libs/shared/ui/components/src/lib/inputs/index.ts"
      ],
      "@shared/ui/layouts": ["libs/shared/ui/layouts/src/lib/index.ts"],

      "@shared/events": ["libs/shared/events/src/index.ts"],
      "@shared/models": ["libs/shared/models/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
