{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node10",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@shared/assets/audio/*": ["libs/shared/assets/audio/*"],
      "@shared/assets/fonts/*": ["libs/shared/assets/fonts/*"],
      "@shared/assets/images/*": ["libs/shared/assets/images/*"],
      "@shared/assets/styles/*": ["libs/shared/assets/styles/*"],
      "@shared/components": ["libs/shared/ui/components/src/index.ts"],
      "@shared/contexts": ["libs/shared/ui/contexts/src/index.ts"],
      "@shared/demo-casino": ["libs/shared/ui/demo-casino/src/index.ts"],
      "@shared/events": ["libs/shared/events/src/index.ts"],
      "@shared/layouts": ["libs/shared/ui/layouts/src/index.ts"],
      "@shared/models": ["libs/shared/models/src/index.ts"],
      "@shared/stores": ["libs/shared/ui/stores/src/index.ts"],
      "@shared/theme": ["libs/shared/ui/theme/src/index.ts"],
      "@shared/utils": ["libs/shared/utils/src/index.ts"],
      "@shared/websocket": ["libs/shared/websocket/src/index.ts"],
      "@shared/hooks": ["libs/shared/ui/hooks/src/index.ts"],
      "@shared/ui/theme": ["libs/shared/ui/theme/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
